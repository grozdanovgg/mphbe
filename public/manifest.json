{
    "manifest_version": 2,
    "name": "mphce",
    "description": "Efficent pool hopping made simple",
    "version": "0.1.0",
    "author": "Ghostrider",
    "browser_action": {
        "default_title": "Pool hopping",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "options_page": "./options/options.html",
    "content_scripts": [
        {
            "matches": [
                "https://www.omegapool.cc/*"
            ],
            "css": [
                "./content/selector.css"
            ],
            "js": [
                "thirdParty/jquery-3.3.1.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "scripts": [
            "thirdParty/jquery-3.3.1.js",
            "./background/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "http://localhost:3000/*/",
        "tabs",
        "activeTab",
        "storage",
        "declarativeContent"
    ]
}